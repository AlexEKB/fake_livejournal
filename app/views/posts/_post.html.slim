- posts.each do |post|
  -if post.published == true
    .col-md-4
      .thumbnail
        = image_tag 'medium_cover.png'
        .thumbnail-inner
          .caption
            .post-description
              h3
                = link_to post.title, post_path(post)
              h3
                small
                = post.user.email
              h3
                small
                  = l post.published_at, format: :short, default: '-'
              h4
                comment
                  = post.decorate.comments_count.to_s + " comments"
